---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "textlink",
  size = "standard",
} = Astro.props;

const linkStyling = "font-headline font-bold text-yellow-500 w-fit";

const variantClasses = {
  textlink: "",
};

const sizeClasses = {
  standard: "text-h4",
  small: "",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>
